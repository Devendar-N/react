{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@images": ["src/assets"],
        "@pages": ["src/pages"],
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }